{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"productName": "PocketN8N",
	"version": "0.1.0",
	"identifier": "com.pocketn8n.app",
	"build": {
		"beforeBuildCommand": "bun run build",
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"fullscreen": false,
				"height": 680,
				"resizable": true,
				"title": "PocketN8N",
				"width": 390,
				"minWidth": 350,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null,
			"capabilities": ["main-capability"]
		}
	},
	"bundle": {
		"active": true,
		"category": "DeveloperTool",
		"copyright": "",
		"externalBin": [],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"longDescription": "",
		"resources": [],
		"shortDescription": "",
		"targets": "all",
		"createUpdaterArtifacts": false,
		"publisher": null,
		"macOS": {
			"frameworks": [],
			"minimumSystemVersion": "",
			"signingIdentity": null
		},
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": "",
			"wix": null,
			"nsis": null
		},
		"linux": {
			"deb": {
				"depends": []
			},
			"appimage": {
				"bundleMediaFramework": false
			}
		}
	}
}
